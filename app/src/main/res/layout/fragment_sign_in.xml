<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".contoller.SignInFragment"
              android:background="@drawable/start_page_background"
              android:orientation="vertical"
>

    <ImageView android:layout_width="100dp"
               android:layout_height="100dp"
               android:id="@+id/ivLogo"
               android:src="@drawable/logo"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="120dp"
               android:layout_marginBottom="20dp"

    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:id="@+id/tvMoto"
              android:layout_gravity="center_horizontal"
              android:text="If you wish to know the mind of a man, \n listen to his VORTO"
              android:textColor="#ffffff"
              android:layout_marginBottom="50dp"
     />




    <!--<TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/let_s_get_started"
              android:layout_gravity="center_horizontal"
              android:textSize="28sp"
              android:textColor="#ffffff"
              android:layout_marginBottom="50dp"
    />
    -->

    <EditText android:layout_width="200dp" android:layout_height="wrap_content"
              android:hint="phone"
              android:layout_gravity="center_horizontal"
              android:id="@+id/etPhone"
              android:textColor="#ffffff"
    />

    <EditText android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:inputType="textPassword"
              android:hint="password"
              android:id="@+id/etPassword"
              android:textColor="#ffffff"
              android:layout_gravity="center_horizontal"

    />
    <Button android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="sign in "
           android:background="@drawable/rounded_button"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:id="@+id/btnSignIn"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="New to Vorto? Register an account"
              android:layout_gravity="center_horizontal"
              android:textColor="#ffffff"
              android:clickable="true"
              android:id="@+id/tvRegister"
              android:layout_marginTop="80dp"


    />

</LinearLayout>